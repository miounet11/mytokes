# AI History Manager Configuration
# Copy this file to .env and modify as needed

# ===================
# Server Settings
# ===================
HOST=0.0.0.0
PORT=9528
WORKERS=4
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ===================
# API Settings
# ===================
# Anthropic API Key (required)
ANTHROPIC_API_KEY=your-api-key-here

# Anthropic API Base URL (optional, for proxies)
ANTHROPIC_BASE_URL=https://api.anthropic.com

# Request timeout in seconds
REQUEST_TIMEOUT=300

# ===================
# Model Routing
# ===================
# Enable intelligent model routing
MODEL_ROUTING_ENABLED=true

# Model IDs
OPUS_MODEL=claude-opus-4-20250514
SONNET_MODEL=claude-sonnet-4-20250514
HAIKU_MODEL=claude-3-5-haiku-20241022

# Keywords that trigger Opus model (comma-separated)
OPUS_KEYWORDS=architect,design pattern,refactor,optimize,security,performance

# ===================
# Response Continuation
# ===================
# Enable automatic response continuation
CONTINUATION_ENABLED=true

# Maximum continuation attempts
MAX_CONTINUATIONS=3

# Max tokens for continuation requests
CONTINUATION_MAX_TOKENS=4096

# ===================
# Rate Limiting
# ===================
# Enable rate limiting
RATE_LIMIT_ENABLED=true

# Requests per second
RATE_LIMIT_RPS=10

# Burst size
RATE_LIMIT_BURST=20

# ===================
# CORS Settings
# ===================
CORS_ENABLED=true
CORS_ORIGINS=*
